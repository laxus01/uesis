{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "watchOptions": {
    "paths": ["src"],
    "ignore": [
      "node_modules",
      "dist",
      "**/node_modules/**",
      "**/dist/**"
    ]
  }
}
